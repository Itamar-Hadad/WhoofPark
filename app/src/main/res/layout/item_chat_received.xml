<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/short2_padding"
    android:paddingHorizontal="@dimen/little_def_margin">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chatItem_IMG_profile"
        android:layout_width="@dimen/pic_message_size"
        android:layout_height="@dimen/pic_message_size"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop"
        android:src="@drawable/unavailable_photo"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/short2_padding"
        android:gravity="start"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/chatItem_LBL_senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/little_def_margin"
            android:text="Other Dog"
            android:textColor="@color/title_name_message_color"
            android:textSize="@dimen/little_title_message_size" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/short_padding"
            android:background="@drawable/bg_chat_bubble_received"
            android:padding="@dimen/padding_top_bar">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/chatItem_LBL_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/max_width_message"
                android:text="Hello!"
                android:textColor="@color/black"
                android:textSize="@dimen/message_text_size" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/chatItem_LBL_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/short2_padding"
            android:text="10:30"
            android:textColor="@color/title_name_message_color"
            android:textSize="@dimen/hour_text_size" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>